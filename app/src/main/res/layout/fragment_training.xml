<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        tools:context=".ui.home.HomeFragment">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nike_experiences_title"
            android:fontFamily="@font/nike_font_helvetica_bold"
            android:textColor="#000000"
            android:text="Train"
            android:textSize="28sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#000000"
                android:layout_marginRight="12dp"
                android:text="Attacking Training" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:layout_marginRight="12dp"
                android:text="Defensive Training" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:text="Mental Training " />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:fontFamily="@font/nike_font_helvetica_bold"
            android:layout_marginTop="24dp"
            android:textColor="#000000"
            android:text="Get the Basics"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nike_experiences_subtitle"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nike_font_helvetica_bold"
            android:textColor="#999999"
            android:textSize="20sp"
            android:text="Get Started with these Classic Attacking Drills and hone your technique and finishing."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shooting" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/nike_font_helvetica_regular"
                    android:textColor="#757575"
                    android:gravity="center_vertical"
                    android:text="Shooting Practice" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dribble" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/nike_font_helvetica_regular"
                    android:textColor="#757575"
                    android:gravity="center_vertical"
                    android:text="Dribbling Techniques" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/passing" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/nike_font_helvetica_regular"
                    android:textColor="#757575"
                    android:gravity="center_vertical"
                    android:text="Passing" />
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:fontFamily="@font/nike_font_helvetica_bold"
            android:layout_marginTop="24dp"
            android:textColor="#000000"
            android:text="Pair with NRC"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nike_font_helvetica_bold"
            android:textColor="#999999"
            android:textSize="20sp"
            android:text="Complete the Nike F.C. Running drills with NRC and improve your Speed Statistic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sprint" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:fontFamily="@font/nike_font_helvetica_regular"
            android:textColor="#757575"
            android:gravity="center_vertical"
            android:text="Sprint Drill Challange" />

        <androidx.appcompat.widget.AppCompatTextView
            android:fontFamily="@font/nike_font_helvetica_bold"
            android:layout_marginTop="24dp"
            android:textColor="#000000"
            android:text="Coach a Team?"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nike_font_helvetica_bold"
            android:textColor="#999999"
            android:textSize="20sp"
            android:text="Sign up for our Premium content now and get your team playing some Sexy Football"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shooting" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/nike_font_helvetica_regular"
                    android:textColor="#757575"
                    android:gravity="center_vertical"
                    android:text="Shooting Practice" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dribble" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/nike_font_helvetica_regular"
                    android:textColor="#757575"
                    android:gravity="center_vertical"
                    android:text="Dribbling Techniques" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="4dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:scaleType="centerCrop"
                    android:src="@drawable/passing" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/nike_font_helvetica_regular"
                    android:textColor="#757575"
                    android:gravity="center_vertical"
                    android:text="Passing" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>