<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    tools:context=".ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="50dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/news1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_trade_gothic"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:paddingTop="16dp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/current_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_trade_gothic"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:paddingTop="4dp" />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="#000000"
            android:textSize="16dp"
            android:maxLines="1"
            android:fontFamily="@font/nike_font_trade_gothic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingBottom="4dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:text="Your Details" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingBottom="4dp"
            android:paddingEnd="20dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:text="Age" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingBottom="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingBottom="4dp"
            android:paddingEnd="20dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:text="Perferred Format" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingBottom="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingBottom="4dp"
            android:paddingEnd="20dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:text="Peferred Position" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingBottom="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingBottom="4dp"
            android:paddingEnd="20dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:text="Peferred Foot" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/foot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingBottom="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingBottom="4dp"
            android:paddingEnd="20dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:text="Height" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingBottom="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:paddingBottom="4dp"
            android:paddingEnd="20dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:text="Weight" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:paddingBottom="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="#000000"
            android:textSize="16dp"
            android:maxLines="1"
            android:fontFamily="@font/nike_font_trade_gothic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:text="Your Current Stats" />


        <ImageView
            android:id="@+id/stats"
            android:paddingTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="#eeeeee" />

        <ImageView
            android:id="@+id/historybtn"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:scaleType="fitXY"
            android:layout_margin="16dp"
            android:src="@drawable/historybtn" />

        <androidx.appcompat.widget.AppCompatTextView
            android:textColor="#000000"
            android:textSize="16dp"
            android:maxLines="1"
            android:fontFamily="@font/nike_font_trade_gothic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="12dp"
            android:paddingTop="12dp"
            android:text="Your Teamates" />

        <LinearLayout
            android:id="@+id/team_mates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">
        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>