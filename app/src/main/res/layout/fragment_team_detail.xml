<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="top"
        android:background="#ffffff"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@drawable/ic_back_arrow"
        app:menu="@menu/team_menu"
        app:title="Shanghai Lions" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.events.fragment.TeamDetailFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:background="@android:color/transparent"
                    android:fitsSystemWindows="true"
                    tools:scaleType="center"
                    android:src="@drawable/team1" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@android:color/transparent"
                    android:fitsSystemWindows="true"
                    tools:scaleType="centerInside"
                    android:src="@drawable/shirt" />

                <View
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent" />

            </LinearLayout>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/eventsfeature_event_details_title"
                android:textColor="#000000"
                android:textSize="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/nike_font_helvetica_bold"
                android:text="Shanghai Lions" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:text="Team Owner: Olli Weaver" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="20dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:text="11-a-side\nTraining every wednesday\nPlays in SLP League\nMatches every Sunday" />

            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="#000000"
                android:textSize="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="12dp"
                android:paddingTop="12dp"
                android:fontFamily="@font/nike_font_helvetica_bold"
                android:text="Latest Upload" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/ugc_game" />


            <androidx.appcompat.widget.AppCompatTextView
                android:textColor="#000000"
                android:textSize="24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="12dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/nike_font_helvetica_bold"
                android:text="Team List" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:text="GoalKeeper: Olli Weaver" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:text="Defender: Wilfred Bush" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:text="Defender: Clyde Hunt" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:text="Defender: Lewis Matthews" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:text="Midfielder: Harry Lawrence" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:text="Midfielder: Kristopher Logan" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:text="Forward: Arnold Rodgers" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_marginStart="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:fontFamily="@font/nike_font_helvetica_regular"
                android:textColor="#757575"
                android:text="Forward: Tony Henry" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_margin="16dp"
                android:background="@android:color/transparent"
                android:src="@drawable/apply" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>



